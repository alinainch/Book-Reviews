<!doctype html>
<html>
<head>
    <title>Book Reviews</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
        <div class="col-sm-6">
          <h3>Book Reviews:</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="list-group-item message">
              Book:<span class="mb-1"><%= messages[i].book %></span>
              <span>Average Rating: <%= (messages[i].reviews.reduce((n, a) => n + a.stars, 0)/messages[i].reviews.length).toFixed(2)%></span>
              <form action="/reviews" method="POST">
                <input type="text" hidden=true value="<%=messages[i].book%>" name="book">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Leave Review" name="text">
                    <input type="number" class="form-control" step=".5" min="1" max="5" placeholder="Rating" name="stars">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              <% for(var n=0; n<messages[i].reviews.length; n++) {%>
                <p><%= messages[i].reviews[n].text%></p>
              <% } %>
            </li>
          <% } %>
          </ul>
        </div>

          <!-- the reviews input wouldnt live here because this is the input to ADD a book. doesnt make sense to review a book that hasnt been added  -->
          <h2>Add Book</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="Enter Book" name="book">
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        <% } %>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="main.js"></script>

</body>
</html>
